{
  "name": "api",
  "private": true,
  "scripts": {
    "start": "nest start -b swc",
    "start:dev0": "nest start -b swc --watch",
    "start:dev": "nest start --watch",
    "start:debug": "nest start --watch --debug 9229",
    "debug:dist": "node dist/main.js",
    "build": "nest build -b swc",
    "start:prod": "node dist/main.js",
    "db:init": "psql -h db -U postgres -d workflow -f ./schema.sql",
    "db:init:manual": "docker compose run --rm api sh -lc \"psql -h db -U postgres -d workflow -f ./schema.sql\""
  },
  "dependencies": {
    "@nestjs/common": "^11.0.0",
    "@nestjs/core": "^11.0.0",
    "@nestjs/platform-fastify": "^11.0.0",
    "@nestjs/platform-socket.io": "^11.0.0",
    "@nestjs/websockets": "^11.0.0",
    "amqplib": "^0.10.4",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.1",
    "dotenv": "^16.6.1",
    "jsonata": "^2.1.0",
    "kafkajs": "^2.2.4",
    "pg": "^8.11.3",
    "reflect-metadata": "^0.2.2",
    "rxjs": "^7.8.1",
    "socket.io": "^4.8.1",
    "socket.io-client": "^4.8.1",
    "uuid": "^13.0.0"
  },
  "devDependencies": {
    "@nestjs/cli": "^11.0.0",
    "@nestjs/schematics": "^11.0.0",
    "@swc/cli": "^0.1.62",
    "@swc/core": "^1.3.95",
    "@types/amqplib": "^0.10.8",
    "@types/pg": "^8.15.6",
    "@types/uuid": "^10.0.0",
    "typescript": "^5.4.5"
  }
}
